BoxLayout:
    padding: 64
    spacing: 64
    orientation: 'vertical'
    Label:
        text: 'Username'
    TextInput:
        id: username
        multiline: False
    Label:
        text: 'Password'
    TextInput:
        id: password
        password: True
        multiline: False
    BoxLayout:
        spacing: 64
        orientation: 'horizontal'
        Button:
            text: 'Submit'
            on_press: root.parent.login()
        Button:
            text: 'Back'
            on_press: root.parent.switch_screen('menu', False)
